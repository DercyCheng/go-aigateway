# 本地部署配置 - 完全不依赖第三方服务
# AI Gateway Local Deployment Configuration

# ============================
# 服务器基础配置
# ============================
PORT=8080
GIN_MODE=release
LOG_LEVEL=info
LOG_FORMAT=text

# ============================
# 本地认证和安全配置
# ============================
LOCAL_AUTH_ENABLED=true
JWT_SECRET=local-deployment-super-secure-jwt-secret-key-at-least-32-characters
JWT_EXPIRATION=24h
REQUIRE_HTTPS=false
API_KEY_PREFIX=local_

# ============================
# CORS 配置
# ============================
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# ============================
# 本地模型配置
# ============================
LOCAL_MODEL_ENABLED=true
LOCAL_MODEL_HOST=localhost
LOCAL_MODEL_PORT=5000
LOCAL_MODEL_TYPE=chat
LOCAL_MODEL_SIZE=small
LOCAL_MODEL_MAX_TOKENS=1024
LOCAL_MODEL_TEMPERATURE=0.7
LOCAL_MODEL_TIMEOUT=30s

# Python 和模型路径配置
PYTHON_PATH=python
MODEL_PATH=./python/model

# ============================
# 健康检查
# ============================
HEALTH_CHECK_ENABLED=true

# ============================
# 限流配置 (本地默认值)
# ============================
RATE_LIMIT_REQUESTS_PER_MINUTE=120

# ============================
# 禁用云服务和第三方依赖
# ============================
# 禁用所有云集成
CLOUD_INTEGRATION_ENABLED=false
SERVICE_DISCOVERY_ENABLED=false
PROTOCOL_CONVERSION_ENABLED=false
RAM_AUTH_ENABLED=false

# 本地 Redis 配置 (可选，如果想要缓存功能)
REDIS_ENABLED=false
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# 本地监控配置 (简化版)
MONITORING_ENABLED=true
MONITORING_ALERTS_ENABLED=false
MONITORING_METRICS_RETENTION=1h

# 自动扩缩容 (本地环境禁用)
AUTO_SCALING_ENABLED=false

# 禁用 TLS（本地开发）
TLS_ENABLED=false

# ============================
# 目标 API 配置 (可选)
# ============================
# 如果需要代理到其他服务，可以配置，否则留空使用本地模型
TARGET_API_URL=
TARGET_API_KEY=
