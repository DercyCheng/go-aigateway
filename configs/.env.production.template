# Production Environment Variables Template
# üîí SECURITY: Change all default values before deployment!

# ==========================================
# Core Service Configuration
# ==========================================
PORT=8080
GIN_MODE=release
LOG_LEVEL=warn
LOG_FORMAT=json

# ==========================================
# üö® CRITICAL SECURITY SETTINGS
# ==========================================

# JWT Configuration - MUST CHANGE IN PRODUCTION
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_STRING_OF_AT_LEAST_64_CHARACTERS_FOR_PRODUCTION_SECURITY
JWT_EXPIRY=24h

# HTTPS Configuration
REQUIRE_HTTPS=true
TLS_CERT_FILE=/etc/ssl/certs/server.crt
TLS_KEY_FILE=/etc/ssl/private/server.key

# CORS Configuration
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-API-Key

# ==========================================
# Authentication & Authorization
# ==========================================
ENABLE_LOCAL_AUTH=true
API_KEY_PREFIX=prod-gw-
MAX_API_KEYS_PER_USER=5

# Rate Limiting (Production Values)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ==========================================
# Database Configuration
# ==========================================

# Redis Configuration
REDIS_ENABLED=true
REDIS_ADDR=redis-cluster:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_FOR_PRODUCTION
REDIS_DB=0
REDIS_POOL_SIZE=20

# PostgreSQL Configuration
DATABASE_URL=postgres://aigateway:CHANGE_THIS_DB_PASSWORD@postgres-master:5432/aigateway?sslmode=require
DATABASE_MAX_CONNECTIONS=25
DATABASE_CONNECTION_TIMEOUT=30s

# ==========================================
# Service Discovery & Clustering
# ==========================================
SERVICE_DISCOVERY_ENABLED=true
SERVICE_DISCOVERY_TYPE=consul
SERVICE_DISCOVERY_ENDPOINTS=consul-1:8500,consul-2:8500,consul-3:8500
SERVICE_DISCOVERY_NAMESPACE=production

# ==========================================
# Monitoring & Observability
# ==========================================
MONITORING_ENABLED=true
MONITORING_ALERTS_ENABLED=true
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Metrics Configuration
METRICS_RETENTION=7d
ALERT_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url

# ==========================================
# Auto Scaling Configuration
# ==========================================
AUTO_SCALING_ENABLED=true
AUTO_SCALING_MIN_REPLICAS=3
AUTO_SCALING_MAX_REPLICAS=10
AUTO_SCALING_TARGET_CPU=70.0
AUTO_SCALING_TARGET_QPS=2000

# ==========================================
# AI Provider Configuration
# ==========================================

# Third-party AI Models
THIRD_PARTY_MODEL_ENABLED=true
THIRD_PARTY_MODEL_PROVIDER=openai
THIRD_PARTY_MODEL_API_KEY=sk-CHANGE_THIS_TO_YOUR_ACTUAL_OPENAI_API_KEY
THIRD_PARTY_MODEL_BASE_URL=https://api.openai.com/v1

# Local Models
LOCAL_MODEL_ENABLED=false
LOCAL_MODEL_PORT=5000
LOCAL_MODEL_TIMEOUT=60s

# ==========================================
# Cloud Integration
# ==========================================
CLOUD_INTEGRATION_ENABLED=true
CLOUD_PROVIDER=aws
CLOUD_REGION=us-west-2
CLOUD_ACCESS_KEY_ID=AKIAEXAMPLE123456789
CLOUD_ACCESS_KEY_SECRET=CHANGE_THIS_TO_YOUR_ACTUAL_AWS_SECRET_KEY

# ==========================================
# Security Headers & Protection
# ==========================================
HSTS_MAX_AGE=31536000
CSRF_PROTECTION=true
XSS_PROTECTION=true
CONTENT_TYPE_NOSNIFF=true

# ==========================================
# Resource Limits
# ==========================================
MAX_REQUEST_SIZE=10485760  # 10MB
MAX_RESPONSE_SIZE=52428800  # 50MB
REQUEST_TIMEOUT=30s
MAX_CONCURRENT_REQUESTS=1000

# ==========================================
# Backup & Disaster Recovery
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# ==========================================
# üîê SECRETS MANAGEMENT
# ==========================================
# In production, use proper secrets management:
# - HashiCorp Vault
# - AWS Secrets Manager
# - Azure Key Vault
# - Kubernetes Secrets

# Example Vault configuration:
# VAULT_ENABLED=true
# VAULT_ADDR=https://vault.yourdomain.com:8200
# VAULT_TOKEN_FILE=/etc/vault/token
# VAULT_SECRETS_PATH=secret/ai-gateway/prod

# ==========================================
# üìä LOGGING & AUDIT
# ==========================================
AUDIT_LOGGING=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION=90d
SECURITY_EVENT_LOGGING=true

# Log shipping
LOG_SHIPPING_ENABLED=true
LOG_SHIPPING_ENDPOINT=https://logs.yourdomain.com/api/logs
LOG_SHIPPING_API_KEY=CHANGE_THIS_TO_YOUR_LOG_SHIPPING_API_KEY

# ==========================================
# üöÄ PERFORMANCE TUNING
# ==========================================
CACHE_ENABLED=true
CACHE_TTL=3600s
GZIP_ENABLED=true
GZIP_LEVEL=6

# Connection pooling
HTTP_CLIENT_TIMEOUT=30s
HTTP_CLIENT_MAX_IDLE_CONNS=100
HTTP_CLIENT_MAX_IDLE_CONNS_PER_HOST=10

# ==========================================
# üîß MAINTENANCE
# ==========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s

# Graceful shutdown
SHUTDOWN_TIMEOUT=30s
SHUTDOWN_GRACE_PERIOD=10s
