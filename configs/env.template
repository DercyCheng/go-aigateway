# AI Gateway 环境变量配置模板
# 复制此文件为 .env 并填入实际的API密钥

# ==========================================
# 基础配置
# ==========================================
GO_ENV=development
LOG_LEVEL=debug

# ==========================================
# 数据库配置
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aigateway_dev
DB_USER=aigateway
DB_PASSWORD=dev_password_2024

# ==========================================
# Redis配置
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ==========================================
# 服务发现配置
# ==========================================
SERVICE_DISCOVERY_ENABLED=true
SERVICE_DISCOVERY_TYPE=consul
CONSUL_ADDR=localhost:8500

# ==========================================
# 通义千问配置
# ==========================================
# 在阿里云控制台获取: https://dashscope.console.aliyun.com/
TONGYI_API_KEY=your_tongyi_api_key_here

# ==========================================
# OpenAI配置
# ==========================================
# 在OpenAI控制台获取: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# ==========================================
# 百度文心一言配置
# ==========================================
# 在百度智能云控制台获取: https://console.bce.baidu.com/qianfan/ais/console/applicationConsole/application
WENXIN_API_KEY=your_wenxin_api_key_here
WENXIN_SECRET_KEY=your_wenxin_secret_key_here

# ==========================================
# 智谱AI配置
# ==========================================
# 在智谱AI开放平台获取: https://open.bigmodel.cn/usercenter/apikeys
ZHIPU_API_KEY=your_zhipu_api_key_here

# ==========================================
# 腾讯混元配置
# ==========================================
# 在腾讯云控制台获取: https://console.cloud.tencent.com/cam/capi
HUNYUAN_SECRET_ID=your_hunyuan_secret_id_here
HUNYUAN_SECRET_KEY=your_hunyuan_secret_key_here

# ==========================================
# 月之暗面Kimi配置
# ==========================================
# 在月之暗面开放平台获取: https://platform.moonshot.cn/console/api-keys
MOONSHOT_API_KEY=your_moonshot_api_key_here

# ==========================================
# JWT配置
# ==========================================
JWT_SECRET=dev_jwt_secret_key_2024
JWT_EXPIRY=24h

# ==========================================
# CORS配置
# ==========================================
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:80

# ==========================================
# 性能配置
# ==========================================
CACHE_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# ==========================================
# 监控配置
# ==========================================
PROMETHEUS_ENABLED=true
METRICS_PORT=9091

# ==========================================
# TLS配置（生产环境）
# ==========================================
TLS_ENABLED=false
TLS_CERT_FILE=
TLS_KEY_FILE=
