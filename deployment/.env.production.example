# AI Gateway 生产环境配置示例
# 复制此文件为 .env.production 并根据需要修改

# ============================================
# 基础配置 (生产环境)
# ============================================
PROJECT_NAME=ai-gateway
VERSION=1.0.0
ENVIRONMENT=production

# ============================================
# 安全配置 (必须修改)
# ============================================
JWT_SECRET=CHANGE_ME_JWT_SECRET_FOR_PRODUCTION_2024
POSTGRES_PASSWORD=CHANGE_ME_POSTGRES_PASSWORD_2024
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_2024
CONSUL_TOKEN=CHANGE_ME_CONSUL_TOKEN_2024
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD_2024
GRAFANA_SECRET_KEY=CHANGE_ME_GRAFANA_SECRET_2024

# ============================================
# 域名配置
# ============================================
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com

# ============================================
# 数据库配置
# ============================================
POSTGRES_HOST=postgres
POSTGRES_DB=ai_gateway
POSTGRES_USER=aigateway

# ============================================
# 应用配置
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
TLS_ENABLED=true
REQUIRE_HTTPS=true

# ============================================
# 第三方API配置
# ============================================
BAILIAN_API_KEY=CHANGE_ME_BAILIAN_API_KEY
ALIYUN_ACCESS_KEY_ID=CHANGE_ME_ALIYUN_ACCESS_KEY
ALIYUN_ACCESS_KEY_SECRET=CHANGE_ME_ALIYUN_SECRET

# ============================================
# 性能配置
# ============================================
AUTOSCALING_ENABLED=true
MIN_REPLICAS=2
MAX_REPLICAS=20
CACHE_ENABLED=true
GZIP_ENABLED=true

# ============================================
# 监控配置
# ============================================
MONITORING_ENABLED=true
ALERTS_ENABLED=true
METRICS_RETENTION=30d

# ============================================
# 备份配置
# ============================================
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=ai-gateway-backups
BACKUP_S3_REGION=cn-hangzhou
