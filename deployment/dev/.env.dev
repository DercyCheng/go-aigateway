# AI网关开发环境配置
# 中国大陆优化版本

# 应用配置
APP_NAME=go-aigateway
APP_VERSION=dev
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=json

# Redis配置 (使用阿里云Redis或本地Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# 数据库配置 (如果需要)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aigateway_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=disable

# AI模型配置
# OpenAI兼容接口
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# 国内AI服务配置
# 智谱AI
ZHIPU_API_KEY=your_zhipu_api_key_here
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# 百度千帆
QIANFAN_API_KEY=your_qianfan_api_key_here
QIANFAN_SECRET_KEY=your_qianfan_secret_key_here
QIANFAN_BASE_URL=https://aip.baidubce.com

# 阿里云通义千问
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# 腾讯混元
HUNYUAN_SECRET_ID=your_hunyuan_secret_id_here
HUNYUAN_SECRET_KEY=your_hunyuan_secret_key_here
HUNYUAN_REGION=ap-beijing

# 本地模型配置
LOCAL_MODEL_ENABLED=true
LOCAL_MODEL_HOST=localhost
LOCAL_MODEL_PORT=5000
PYTHON_MODEL_PATH=/app/python

# 监控配置
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_PATH=/metrics

# 安全配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# JWT配置
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRY=24h

# 文件上传配置
MAX_UPLOAD_SIZE=10MB
UPLOAD_PATH=/tmp/uploads

# 开发环境特定配置
DEV_MODE=true
HOT_RELOAD=true
DEBUG_MODE=true

# 网络配置 (中国大陆优化)
HTTP_TIMEOUT=30s
HTTP_RETRY_COUNT=3
HTTP_RETRY_DELAY=1s

# 代理配置 (如果需要)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1,::1
